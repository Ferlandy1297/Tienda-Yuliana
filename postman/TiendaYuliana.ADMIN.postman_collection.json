  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "const path = '/' + pm.request.url.path.join('/');",
          "const method = pm.request.method;",
          "const code = pm.response.code;",
          "let json = null; try { json = pm.response.json(); } catch(e) {}",
          "const isArray = (v) => Array.isArray(v);",
          "const isObject = (v) => v && typeof v === 'object' && !Array.isArray(v);",
          "\n// Dashboard",
          "if (method==='GET' && path==='/dashboard/summary') {",
          "  pm.test('200 OK', () => pm.response.to.have.status(200));",
          "  pm.test('Campos resumen', () => { pm.expect(isObject(json)).to.be.true; pm.expect(json).to.have.property('ventasHoy'); pm.expect(json).to.have.property('lowStock'); pm.expect(json).to.have.property('productos'); });",
          "}",
          "\n// Productos",
          "if (path==='/productos' && method==='GET') { pm.test('Lista de productos', () => { pm.response.to.have.status(200); pm.expect(isArray(json)).to.be.true; }); }",
          "if (path.startsWith('/productos/') && method==='GET') { pm.test('Producto por ID 200', () => pm.response.to.have.status(200)); }",
          "if (path==='/productos' && method==='POST') { pm.test('Crear producto 200', () => pm.response.to.have.status(200)); }",
          "if (path.match(/^\\/productos\\/\\d+$/) && method==='PUT') { pm.test('Actualizar producto 200', () => pm.response.to.have.status(200)); }",
          "if (path.match(/^\\/productos\\/\\d+$/) && method==='DELETE') { pm.test('Eliminar/Toggle 200/204', () => pm.expect([200,204]).to.include(code)); }",
          "if (path==='/productos/stock-bajo' && method==='GET') { pm.test('Stock bajo 200 lista', () => { pm.response.to.have.status(200); pm.expect(isArray(json)).to.be.true; }); }",
          "\n// Clientes",
          "if (path==='/clientes' && method==='GET') { pm.test('Lista clientes 200', () => { pm.response.to.have.status(200); pm.expect(isArray(json)).to.be.true; }); }",
          "if (path.match(/^\\/clientes\\/\\d+$/) && method==='GET') { pm.test('Cliente por ID 200', () => pm.response.to.have.status(200)); }",
          "if (path==='/clientes' && method==='POST') { pm.test('Crear cliente 200/201', () => pm.expect([200,201]).to.include(code)); }",
          "if (path.match(/^\\/clientes\\/\\d+$/) && method==='PUT') { pm.test('Actualizar cliente 200', () => pm.response.to.have.status(200)); }",
          "if (path.match(/^\\/clientes\\/\\d+$/) && method==='DELETE') { pm.test('Eliminar cliente 200/204', () => pm.expect([200,204]).to.include(code)); }",
          "\n// Proveedores",
          "if (path==='/proveedores' && method==='GET') { pm.test('Lista proveedores 200', () => { pm.response.to.have.status(200); pm.expect(isArray(json)).to.be.true; }); }",
          "if (path.match(/^\\/proveedores\\/\\d+$/) && method==='GET') { pm.test('Proveedor por ID 200', () => pm.response.to.have.status(200)); }",
          "if (path==='/proveedores' && method==='POST') { pm.test('Crear proveedor 200/201', () => pm.expect([200,201]).to.include(code)); }",
          "if (path.match(/^\\/proveedores\\/\\d+$/) && method==='PUT') { pm.test('Actualizar proveedor 200', () => pm.response.to.have.status(200)); }",
          "if (path.match(/^\\/proveedores\\/\\d+$/) && method==='DELETE') { pm.test('Eliminar proveedor 200/204', () => pm.expect([200,204]).to.include(code)); }",
          "\n// Ventas",
          "if (path==='/ventas' && method==='POST') { pm.test('Registrar venta 200', () => pm.response.to.have.status(200)); pm.test('VentaResponse', () => { pm.expect(isObject(json)).to.be.true; pm.expect(json).to.have.property('idVenta'); pm.expect(json).to.have.property('total'); }); }",
          "if (path==='/ventas' && method==='GET') { pm.test('Listar ventas 200 lista', () => { pm.response.to.have.status(200); pm.expect(isArray(json)).to.be.true; }); }",
          "if (path.match(/^\\/ventas\\/\\d+$/) && method==='GET') { pm.test('Venta por ID 200', () => pm.response.to.have.status(200)); }",
          "\n// Pagos Venta",
          "if (path==='/pagos-venta' && method==='POST') { pm.test('Pago venta 200', () => pm.response.to.have.status(200)); }",
          "\n// Compras",
          "if (path==='/compras' && method==='POST') { pm.test('Registrar compra 200', () => pm.response.to.have.status(200)); }",
          "if (path==='/compras' && method==='GET') { pm.test('Listar compras 200 lista', () => { pm.response.to.have.status(200); pm.expect(isArray(json)).to.be.true; }); }",
          "if (path.match(/^\\/compras\\/\\d+$/) && method==='GET') { pm.test('Compra por ID 200', () => pm.response.to.have.status(200)); }",
          "\n// Pagos Compra",
          "if (path==='/pagos-compra' && method==='POST') { pm.test('Pago compra 200', () => pm.response.to.have.status(200)); }",
          "\n// Mermas",
          "if (path==='/mermas' && method==='POST') { pm.test('Merma 200', () => pm.response.to.have.status(200)); }",
          "\n// Caducidades",
          "if (path==='/caducidades/por-vencer' && method==='GET') { pm.test('Por vencer 200 lista', () => { pm.response.to.have.status(200); pm.expect(isArray(json)).to.be.true; }); }",
          "\n// Devoluciones Proveedor",
          "if (path==='/devoluciones-proveedor' && method==='POST') { pm.test('Devolución 200', () => pm.response.to.have.status(200)); }",
          "\n// Fiados",
          "if (path==='/fiados/clientes' && method==='GET') { pm.test('Fiados clientes 200 lista', () => { pm.response.to.have.status(200); pm.expect(isArray(json)).to.be.true; }); }",
          "if (path==='/fiados/abono' && method==='POST') { pm.test('Fiados abono 200', () => pm.response.to.have.status(200)); pm.test('Abono payload', () => { pm.expect(isObject(json)).to.be.true; pm.expect(json).to.have.property('idCliente'); pm.expect(json).to.have.property('saldo'); }); }",
          "\n// Reportes",
          "if (path==='/reportes/ventas' && method==='GET') { pm.test('Reporte ventas 200', () => pm.response.to.have.status(200)); pm.test('Campos reporte ventas', () => { pm.expect(isObject(json)).to.be.true; pm.expect(json).to.have.property('total'); pm.expect(json).to.have.property('transacciones'); }); }",
          "if (path==='/reportes/mas-vendidos' && method==='GET') { pm.test('Más vendidos 200 lista', () => { pm.response.to.have.status(200); pm.expect(isArray(json)).to.be.true; }); }",
          "if (path==='/reportes/utilidades' && method==='GET') { pm.test('Utilidades 200', () => pm.response.to.have.status(200)); pm.test('Campos utilidades', () => { pm.expect(isObject(json)).to.be.true; pm.expect(json).to.have.property('totalVentas'); pm.expect(json).to.have.property('utilidad'); }); }",
          "if (path==='/reportes/export/excel' && method==='GET') { pm.test('Export excel 200', () => pm.response.to.have.status(200)); }",
          "if (path==='/reportes/export/pdf' && method==='GET') { pm.test('Export pdf 200', () => pm.response.to.have.status(200)); }"
        ]
      }
    }
